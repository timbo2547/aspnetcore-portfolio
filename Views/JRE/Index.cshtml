@model IEnumerable<AspNetCorePostgreSQLDockerApp.Models.JreShow>

@{
    ViewData["Title"] = "JRE Show";
}

@foreach (var movie in Model)
{
    <article class="media content-section">
        <div class="media-body">
            <h3><a class="article-title" href=@movie.Url>@movie.Title</a></h3>         
            <img src=@movie.ImageUrl height="300" width="300" alt=@movie.Title />
            <p class="article-content">
                @movie.Description
            </p>
        </div>
    </article>
}
