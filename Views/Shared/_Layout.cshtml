<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tim App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark nav-shadow">
            <div class="container nav-transition">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LT</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
                        <li class="nav-item @Html.ActiveClass("Home", "Index")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="nav-icon"><i class="fa fa-fw fa-home"></i></span>
                                <span class="nav-icon-label">Home</span>
                            </a>
                        </li>
                        <li class="nav-item @Html.ActiveClass("Home", "About")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <span class="nav-icon"><i class="fa fa-info"></i></span>
                                <span class="nav-icon-label">About</span>
                            </a>
                        </li>
                        <li class="nav-item @Html.ActiveClass("CurriculumVitae", "Index")">
                            <a class="nav-link" asp-area="" asp-controller="CurriculumVitae" asp-action="Index">
                                <span class="nav-icon"><i class="fa fa-file-text"></i></span>
                                <span class="nav-icon-label">CV</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown @Html.ActiveClass("Projects", "Index")">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="nav-icon"><i class="fa fa-archive"></i></span>
                                <span class="nav-icon-label">Projects</span>
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Project Management</a>
                                <a class="dropdown-item" href="#">Kanban Board</a>
                                <a class="dropdown-item" href="#">AutoCad Plugin</a>
                            </div>
                        </li>

                        @*<li class="nav-item @Html.ActiveClass("JRE", "Index")">
                            <a class="nav-link" asp-area="" asp-controller="JRE" asp-action="Index">
                                <span class="nav-icon"><i class="fa fa-rss"></i></span>
                                <span class="nav-icon-label">JRE Show</span>
                            </a>
                        </li>*@
                    </ul>
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/timbo2547/">
                                <span class="nav-icon"><i class="fa fa-github"></i></span>
                                @*<span class="nav-icon-label">Github</span>*@
                            </a>
                        </li>
                        <li class="nav-item pr-4">
                            <a class="nav-link" href="https://www.linkedin.com/in/tim-luna-a2074b14/">
                                <span class="nav-icon"><i class="fa fa-linkedin"></i></span>
                                @*<span class="nav-icon-label">Linkedin</span>*@
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@(Url.Content("~/swagger"))">
                                <span class="nav-icon"><i class="fa fa-database"></i></span>
                                <span class="nav-icon-label">Swagger</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - <a asp-area="" asp-controller="Home" asp-action="Index">TL</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
